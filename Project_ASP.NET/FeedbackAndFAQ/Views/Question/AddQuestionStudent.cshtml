@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BusinessObject.Models
@model BusinessObject.Models.Question
@{
    var subjects = ViewBag.Subject as List<Subject>;

}

<form asp-action="Insert" method="post">
    <div class="form-group">
        <label for="exampleInputPassword1">Câu hỏi</label>
        <textarea style="height: 200px" type="text" class="form-control" name="ans_desc" id="exampleInputPassword1">@(Model != null ? Model.Description : "")</textarea>
    </div>
    <div class="form-group">
        <label for="subjectDropdown">Chọn môn học</label>
        <select class="form-control" id="subjectDropdown" name="subjectId">
            @foreach (var item in subjects)
            {
                <option value="@item.SubjectId">@item.SubjectName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Gửi</button>
</form>