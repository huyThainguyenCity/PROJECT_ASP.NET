@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BusinessObject.Models
@model BusinessObject.Models.Question
@{
    var subjects = ViewBag.Subject as List<Subject>;

}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech2 etc Tutorial</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="@Url.Content("~/css/home.css")">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</head>

<div class="container-subject">
    <form class="form-addquestion" asp-controller="Question" asp-action="Insert" method="post">
        <div class="form-group">
            <label for="exampleInputPassword1">Câu hỏi</label>
            <textarea style="height: 200px" type="text" class="form-control" name="desc" id="exampleInputPassword1">@(Model != null ? Model.Description : "")</textarea>
        </div>
        <div class="form-group">
            <label for="subjectDropdown">Chọn môn học</label>
            <select class="form-control" id="subjectDropdown" name="subjectId">
                @foreach (var item in subjects)
                {
                    <option value="@item.SubjectId">@item.SubjectName</option>
                }
            </select>
        </div>
        <button style="margin-top:16px;margin-bottom:20px" type="submit" class="btn btn-primary">Gửi</button>
    </form>
</div>
