@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BusinessObject.Models
@model List<Question>
@{
    var question = ViewBag.Question as Question;
}
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="@Url.Content("~/css/question.css")" />
</head>
<body>
    <div class="feedback">
        <div class="feedback__title">FPT University</div>
        <div class="feedback__header">
            <div class="feedback__header__left">
                <span class="feedback__header__left__home">Home</span>
                <span>|</span>
                <span>View Feedback</span>
            </div>
            <div class="feedback__header__right">
                <span>quannt</span>
                <span>HE151386</span>
                <span>Campus Hòa Lạc</span>
            </div>
        </div>
        <div class="feedback__table">
            <table id="myTable" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>NO</th>
                        <th>ROLLNUMBER</th>
                        <th>SUBJECT</th>
                        <th>TITLE</th>
                        <th></th>
                        <th>SENT TIME</th>
                        <th>REPLIED TIME</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Question item in Model)
                    {
                        <tr>
                            <td>@item.QuenstionId</td>
                            <td>@item.Account.StudentCode</td>
                            <td>@item.Subject.SubjectCode</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="answer" onclick="showHelloWorld(1)">View Answer</div>
                                <div id="helloWorldMessage">Hello World</div>
                            </td>
                            <td>@item.CreateDate</td>
                            <td></td>
                            <td>Process</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "paging": true // Bật tính năng phân trang
        });
    });
</script>

</html>